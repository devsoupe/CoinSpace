<?xml version="1.0" encoding="utf-8"?>
<com.perelandrax.coinspace.presentation.ribs.coindetail.CoinDetailView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/colorWhite">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
      android:id="@+id/bg_dominant"
      android:layout_width="0dp"
      android:layout_height="180dp"
      android:background="@color/colorPrimaryDark"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"/>

    <ScrollView
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginBottom="@dimen/padding_16dp"
      android:paddingLeft="@dimen/padding_16dp"
      android:paddingRight="@dimen/padding_16dp"
      android:paddingTop="@dimen/padding_32dp"
      android:scrollbars="none"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintBottom_toBottomOf="parent">

      <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
          android:id="@+id/coinLogCardView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:cardElevation="4dp"
          app:cardUseCompatPadding="true">

          <ImageView
            android:id="@+id/coinLogoImageView"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="@dimen/padding_8dp"
            android:src="@mipmap/ic_launcher"/>

        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.Group
          android:id="@+id/coinDetailLayout"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:visibility="gone"
          app:constraint_referenced_ids="coinDetailInfoLayout,space1,coinDetailFeaturesLayout,space2,coinSupplyCardView,startDateCardView"
          tools:visibility="visible"/>

        <include
          layout="@layout/layout_coin_detail_info"
          android:id="@+id/coinDetailInfoLayout"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:visibility="visible"
          android:layout_marginTop="48dp"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"/>

        <Space
          android:id="@+id/space1"
          android:layout_width="0dp"
          android:layout_height="@dimen/padding_16dp"
          app:layout_constraintTop_toBottomOf="@+id/coinDetailInfoLayout"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"/>

        <include
          layout="@layout/layout_coin_detail_features"
          android:id="@+id/coinDetailFeaturesLayout"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:visibility="visible"
          app:layout_constraintTop_toBottomOf="@+id/space1"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"/>

        <Space
          android:id="@+id/space2"
          android:layout_width="0dp"
          android:layout_height="@dimen/padding_16dp"
          app:layout_constraintTop_toBottomOf="@+id/coinDetailFeaturesLayout"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"/>

        <androidx.cardview.widget.CardView
          android:id="@+id/coinSupplyCardView"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          app:cardUseCompatPadding="true"
          app:layout_constraintTop_toBottomOf="@+id/space2"
          app:layout_constraintLeft_toLeftOf="parent">

          <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_8dp"
            android:background="@color/colorPrimary">

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Total coin supply: "
              android:textAllCaps="true"
              android:textColor="@color/colorWhite"
              android:textStyle="bold"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
              android:id="@+id/coinSupplyTextView"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/colorWhite"
              android:textStyle="bold"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              tools:text="Bitcoin"/>

          </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
          android:id="@+id/startDateCardView"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          app:cardUseCompatPadding="true"
          app:layout_constraintTop_toBottomOf="@+id/coinSupplyCardView"
          app:layout_constraintLeft_toLeftOf="parent">

          <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_8dp"
            android:background="@color/colorPrimary">

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Start date: "
              android:textAllCaps="true"
              android:textColor="@color/colorWhite"
              android:textStyle="bold"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
              android:id="@+id/startDateTextView"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/colorWhite"
              android:textStyle="bold"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              tools:text="Bitcoin"/>

          </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

      </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.airbnb.lottie.LottieAnimationView
      android:id="@+id/coinDetailLoadingView"
      android:layout_width="240dp"
      android:layout_height="240dp"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:lottie_autoPlay="true"
      app:lottie_enableMergePathsForKitKatAndAbove="true"
      app:lottie_fileName="waiting.json"
      app:lottie_loop="true"
      tools:visibility="visible"/>

  </androidx.constraintlayout.widget.ConstraintLayout>

</com.perelandrax.coinspace.presentation.ribs.coindetail.CoinDetailView>